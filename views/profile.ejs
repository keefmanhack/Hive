	function showMainPage(){
		$('.page-container').removeClass('hide');
		$('.photo-selector').removeClass('show');
		$('#photo-editor').removeClass('show');
	}

	function editPhoto(imageData){
		editMode = true;
		$('#photo-editor').toggleClass('show');
